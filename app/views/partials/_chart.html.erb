<style>

.bar {
  fill: black;
}

.bar:hover {
  fill: orange;
}

.axis {
  font: 10px sans-serif;
}

.axis path,
.axis line {
  fill: none;
  stroke: #000;
  shape-rendering: crispEdges;
}

.x.axis path {
  display: none;
}

</style>
<body>
<script>

var margin = {top: 20, right: 20, bottom: 30, left: 40},
    width = 960 - margin.left - margin.right,
    height = 500 - margin.top - margin.bottom;

var x = d3.scale.ordinal()
    .rangeRoundBands([0, width], .1);

var y = d3.scale.linear()
    .range([height, 0]);

var xAxis = d3.svg.axis()
    .scale(x)
    .orient("bottom");

var yAxis = d3.svg.axis()
    .scale(y)
    .orient("left");

var svg = d3.select("body").append("svg")
    .attr("width", width + margin.left + margin.right)
    .attr("height", height + margin.top + margin.bottom)
  .append("g")
    .attr("transform", "translate(" + margin.left + "," + margin.top + ")");


var data = window.data
setInterval(function(){data = window.data}, 1000);
setTimeout(function(){svg.selectAll("*").remove().remove();chartData(data)}, 2000)
setTimeout(function(){svg.selectAll("*").remove().remove();chartData(data)}, 40000)
setTimeout(function(){svg.selectAll("*").remove().remove();chartData(data)}, 60000)
setTimeout(function(){svg.selectAll("*").remove().remove();chartData(data)}, 80000)
setTimeout(function(){svg.selectAll("*").remove().remove();chartData(data)}, 10000)
setTimeout(function(){svg.selectAll("*").remove().remove();chartData(data)}, 12000)
function chartData(data){
  x.domain(data.map(function(d) { return d.timeOfTweet; }));
  y.domain([0, d3.max(data, function(d) { return d.tweets; })]);

  svg.append("g")
      .attr("class", "x axis")
      .attr("transform", "translate(0," + height + ")")
      .call(xAxis);

  svg.append("g")
      .attr("class", "y axis")
      .call(yAxis)
    .append("text")
      .attr("transform", "rotate(-90)")
      .attr("y", 6)
      .attr("dy", ".71em")
      .style("text-anchor", "end")
      .text("tweets");

  svg.selectAll(".bar")
      .data(data)
    .enter().append("rect")
      .attr("class", "bar")
      .attr("x", function(d) { return x(d.timeOfTweet); })
      .attr("width", x.rangeBand())
      .attr("y", function(d) { return y(d.tweets); })
      .attr("height", function(d) { return height - y(d.tweets); })
}

function type(d) {
  d.tweets = +d.tweets;
  return d;
}
chartData(data)

</script>